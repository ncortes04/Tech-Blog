<div class="row">
        <div class="col-auto">
          <h2>Welcome, {{name}}!</h2>
        </div>
      </div>
    <div class="container">
      <div class="row mt-4">
        <div class="col-md-6">
          <h3>Submit a New Post:</h3>
      
          <form>
            <div class="mb-3">
              <label for="postName" class="form-label">Post Name</label>
              <input class="form-control" id="postName" aria-label="post Input">
            </div>
    
            <div class="mb-3">
              <label for="descriptionInput" class="form-label">Description:</label>
              <textarea class="form-control" id="postDescription" aria-label="With textarea"></textarea>
               <button class="btn btn-primary" id="submitBtn">Submit</button>
          </form>
        </div>
        {{#if posts.length}}
        <div class="col project-list">
          <h3>Current Posts:</h3>
      
          {{#each renderPosts as |post|}}
          <div class="row">
            <div class="col-md-8">
              <h4><a href="/crystal/{{post.id}}">{{post.name}}</a></h4>
            </div>
            <div class="col-md-4">
              <button class="btn btn-sm btn-danger .project-list" data-id="{{post.id}}">DELETE</button>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
          <div class="col project-list">
          <h3>Current Posts:</h3>
           <div class="row">
            <div class="col-md-8">
              <h4>No Posts found</h4>
            </div>
            <div class="col-md-4">
              <button class="btn btn-sm btn-danger .project-list" data-id="{{post.id}}">DELETE</button>
            </div>
          </div>
        {{/if}}
      </div>
    </div>

    <script src="./js/profile.js"></script>
